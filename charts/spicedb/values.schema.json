{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpiceDB Helm Chart Values",
  "description": "Schema for validating SpiceDB Helm chart values.yaml",
  "type": "object",
  "required": ["replicaCount", "image", "config"],
  "properties": {
    "replicaCount": {
      "type": "integer",
      "description": "Number of SpiceDB replicas to deploy",
      "minimum": 1,
      "default": 1
    },
    "image": {
      "type": "object",
      "description": "Container image configuration",
      "required": ["repository", "pullPolicy"],
      "properties": {
        "repository": {
          "type": "string",
          "description": "SpiceDB container image repository",
          "default": "authzed/spicedb",
          "minLength": 1
        },
        "pullPolicy": {
          "type": "string",
          "description": "Image pull policy",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        },
        "tag": {
          "type": "string",
          "description": "Overrides the image tag whose default is the chart appVersion",
          "default": ""
        }
      }
    },
    "imagePullSecrets": {
      "type": "array",
      "description": "Image pull secrets for private registries",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "default": []
    },
    "nameOverride": {
      "type": "string",
      "description": "Override the chart name",
      "default": ""
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the fully qualified app name",
      "default": ""
    },
    "serviceAccount": {
      "type": "object",
      "description": "ServiceAccount configuration",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Specifies whether a service account should be created",
          "default": true
        },
        "automount": {
          "type": "boolean",
          "description": "Automatically mount a ServiceAccount's API credentials",
          "default": true
        },
        "annotations": {
          "type": "object",
          "description": "Annotations to add to the service account",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        },
        "name": {
          "type": "string",
          "description": "The name of the service account to use. If not set and create is true, a name is generated using the fullname template",
          "default": ""
        }
      }
    },
    "podAnnotations": {
      "type": "object",
      "description": "Annotations to add to the pods",
      "additionalProperties": true,
      "default": {}
    },
    "podLabels": {
      "type": "object",
      "description": "Labels to add to the pods",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Security context for the pod",
      "properties": {
        "fsGroup": {
          "type": "integer",
          "minimum": 1
        },
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 1
        },
        "runAsGroup": {
          "type": "integer",
          "minimum": 1
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["RuntimeDefault", "Unconfined", "Localhost"]
            }
          }
        }
      },
      "default": {}
    },
    "securityContext": {
      "type": "object",
      "description": "Security context for the container",
      "properties": {
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "add": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "readOnlyRootFilesystem": {
          "type": "boolean"
        },
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 1
        },
        "allowPrivilegeEscalation": {
          "type": "boolean"
        }
      },
      "default": {}
    },
    "service": {
      "type": "object",
      "description": "Service configuration",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "description": "Kubernetes service type",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"],
          "default": "ClusterIP"
        },
        "grpcPort": {
          "type": "integer",
          "description": "gRPC service port",
          "minimum": 1,
          "maximum": 65535,
          "default": 50051
        },
        "httpPort": {
          "type": "integer",
          "description": "HTTP gateway port",
          "minimum": 1,
          "maximum": 65535,
          "default": 8443
        },
        "metricsPort": {
          "type": "integer",
          "description": "Metrics/Prometheus port",
          "minimum": 1,
          "maximum": 65535,
          "default": 9090
        },
        "dispatchPort": {
          "type": "integer",
          "description": "Dispatch cluster communication port",
          "minimum": 1,
          "maximum": 65535,
          "default": 50053
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "Container resource requests and limits",
      "properties": {
        "limits": {
          "type": "object",
          "description": "Resource limits",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m?$"
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+(Mi|Gi)$"
            }
          }
        },
        "requests": {
          "type": "object",
          "description": "Resource requests",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m?$"
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+(Mi|Gi)$"
            }
          }
        }
      },
      "default": {}
    },
    "config": {
      "type": "object",
      "description": "SpiceDB configuration",
      "required": ["datastoreEngine"],
      "properties": {
        "datastoreEngine": {
          "type": "string",
          "description": "Datastore engine to use",
          "enum": ["memory", "postgres", "cockroachdb"],
          "default": "memory"
        },
        "presharedKey": {
          "type": "string",
          "description": "gRPC preshared key for authentication",
          "minLength": 1
        },
        "autogenerateSecret": {
          "type": "boolean",
          "description": "Auto-generate secure random preshared key if not explicitly set. For production, use existingSecret instead.",
          "default": false
        },
        "existingSecret": {
          "type": "string",
          "description": "Reference to an existing secret containing datastore credentials. Mutually exclusive with autogenerateSecret when both contain values."
        },
        "datastoreURI": {
          "type": "string",
          "description": "Explicit datastore connection URI (overrides generated connection string)"
        },
        "datastore": {
          "type": "object",
          "description": "Datastore connection configuration (used when datastoreURI is not set)",
          "properties": {
            "hostname": {
              "type": "string",
              "description": "Hostname of the database server",
              "default": "localhost"
            },
            "port": {
              "type": "integer",
              "description": "Port number",
              "minimum": 1,
              "maximum": 65535,
              "default": 5432
            },
            "username": {
              "type": "string",
              "description": "Database username",
              "default": "spicedb"
            },
            "password": {
              "type": "string",
              "description": "Database password (only used if existingSecret is not set)"
            },
            "database": {
              "type": "string",
              "description": "Database name",
              "default": "spicedb"
            },
            "sslMode": {
              "type": "string",
              "description": "SSL mode for database connections",
              "enum": ["disable", "allow", "prefer", "require", "verify-ca", "verify-full"],
              "default": "disable"
            },
            "sslRootCert": {
              "type": "string",
              "description": "Path to SSL root certificate"
            },
            "sslCert": {
              "type": "string",
              "description": "Path to SSL client certificate"
            },
            "sslKey": {
              "type": "string",
              "description": "Path to SSL client key"
            }
          }
        }
      }
    },
    "logging": {
      "type": "object",
      "description": "Logging configuration for SpiceDB and migration jobs",
      "required": ["level", "format"],
      "properties": {
        "level": {
          "type": "string",
          "description": "Log verbosity level",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info"
        },
        "format": {
          "type": "string",
          "description": "Log output format",
          "enum": ["json", "console"],
          "default": "json"
        }
      }
    },
    "dispatch": {
      "type": "object",
      "description": "Dispatch cluster mode configuration for distributed permission checking",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable dispatch cluster mode for distributed permission checking",
          "default": false
        },
        "upstreamCASecretName": {
          "type": "string",
          "description": "Name of Kubernetes secret containing custom CA certificate for upstream dispatch connections",
          "default": ""
        },
        "upstreamCAPath": {
          "type": "string",
          "description": "Path where the upstream CA certificate will be mounted in the container",
          "default": "/etc/dispatch-ca/ca.crt"
        },
        "clusterName": {
          "type": "string",
          "description": "Cluster name for identifying this SpiceDB cluster in logs and metrics",
          "default": ""
        }
      }
    },
    "ingress": {
      "type": "object",
      "description": "Ingress configuration for exposing SpiceDB to external traffic",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ingress resource creation",
          "default": false
        },
        "className": {
          "type": "string",
          "description": "IngressClass name for selecting the ingress controller (nginx, contour, traefik, etc.)",
          "default": ""
        },
        "annotations": {
          "type": "object",
          "description": "Annotations for controller-specific configuration",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        },
        "hosts": {
          "type": "array",
          "description": "List of ingress hosts with paths and service configurations",
          "items": {
            "type": "object",
            "required": ["host", "paths"],
            "properties": {
              "host": {
                "type": "string",
                "description": "Hostname for the ingress rule",
                "minLength": 1
              },
              "paths": {
                "type": "array",
                "description": "List of paths for this host",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["path"],
                  "properties": {
                    "path": {
                      "type": "string",
                      "description": "Path to match (e.g., /, /api)",
                      "minLength": 1
                    },
                    "pathType": {
                      "type": "string",
                      "description": "Path matching type",
                      "enum": ["Exact", "Prefix", "ImplementationSpecific"],
                      "default": "Prefix"
                    },
                    "servicePort": {
                      "description": "Target service port (name or number)",
                      "oneOf": [
                        {
                          "type": "string",
                          "enum": ["grpc", "http", "metrics", "dispatch"]
                        },
                        {
                          "type": "integer",
                          "minimum": 1,
                          "maximum": 65535
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "default": []
        },
        "tls": {
          "type": "array",
          "description": "TLS configuration for HTTPS",
          "items": {
            "type": "object",
            "properties": {
              "secretName": {
                "type": "string",
                "description": "Name of the secret containing TLS certificate"
              },
              "hosts": {
                "type": "array",
                "description": "List of hosts covered by the TLS certificate",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "default": []
        }
      }
    },
    "nodeSelector": {
      "type": "object",
      "description": "Node selector for pod assignment",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "tolerations": {
      "type": "array",
      "description": "Tolerations for pod assignment",
      "items": {
        "type": "object"
      },
      "default": []
    },
    "affinity": {
      "type": "object",
      "description": "Affinity rules for pod assignment",
      "default": {}
    },
    "networkPolicy": {
      "type": "object",
      "description": "NetworkPolicy configuration for network isolation and zero-trust security",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable NetworkPolicy for network isolation. Requires a network plugin that supports NetworkPolicy (Calico, Cilium, etc.)",
          "default": false
        },
        "ingressControllerNamespaceSelector": {
          "type": "object",
          "description": "Namespace selector for ingress controller to allow traffic to gRPC and HTTP ports",
          "additionalProperties": true,
          "default": {}
        },
        "prometheusNamespaceSelector": {
          "type": "object",
          "description": "Namespace selector for Prometheus to allow traffic to metrics port",
          "additionalProperties": true,
          "default": {}
        },
        "databaseEgress": {
          "type": "object",
          "description": "Database egress configuration for outbound traffic to database",
          "additionalProperties": true,
          "default": {}
        },
        "ingress": {
          "type": "array",
          "description": "Custom ingress rules for additional traffic patterns",
          "items": {
            "type": "object",
            "additionalProperties": true
          },
          "default": []
        },
        "egress": {
          "type": "array",
          "description": "Custom egress rules for additional outbound traffic",
          "items": {
            "type": "object",
            "additionalProperties": true
          },
          "default": []
        }
      }
    },
    "operatorCompatibility": {
      "type": "object",
      "description": "Operator compatibility configuration for adding version tracking annotations to Deployment",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable operator-compatible annotations on the Deployment",
          "default": false
        },
        "annotations": {
          "type": "object",
          "description": "Controls which annotations are added to the pod template",
          "properties": {
            "version": {
              "type": "boolean",
              "description": "Add spicedb.authzed.com/version annotation with SpiceDB version",
              "default": true
            },
            "chartVersion": {
              "type": "boolean",
              "description": "Add spicedb.authzed.com/chart-version annotation with Helm chart version",
              "default": true
            },
            "datastoreEngine": {
              "type": "boolean",
              "description": "Add spicedb.authzed.com/datastore-engine annotation with datastore type",
              "default": true
            },
            "migrationHash": {
              "type": "boolean",
              "description": "Add spicedb.authzed.com/migration-hash annotation for tracking migration state changes",
              "default": true
            }
          },
          "default": {
            "version": true,
            "chartVersion": true,
            "datastoreEngine": true,
            "migrationHash": true
          }
        }
      }
    },
    "operatorStyle": {
      "type": "object",
      "description": "Simplified operator-compatible configuration section",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable operator-style configuration mode",
          "default": false
        },
        "secretName": {
          "type": "string",
          "description": "Name of existing Kubernetes secret containing preshared-key and datastore-uri"
        },
        "replicas": {
          "type": "integer",
          "description": "Number of SpiceDB replicas",
          "minimum": 1,
          "default": 3
        },
        "tlsSecretName": {
          "type": "string",
          "description": "Single TLS secret for all endpoints (gRPC, HTTP, dispatch)"
        },
        "dispatchUpstreamCASecretName": {
          "type": "string",
          "description": "Dispatch cluster upstream CA certificate secret name"
        },
        "datastoreEngine": {
          "type": "string",
          "description": "Datastore engine selection",
          "enum": ["memory", "postgres", "cockroachdb"],
          "default": "postgres"
        }
      },
      "if": {
        "properties": {
          "enabled": {
            "const": true
          }
        }
      },
      "then": {
        "required": ["secretName"]
      }
    },
    "migrations": {
      "type": "object",
      "description": "Database migration configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Run database migrations as a pre-install/pre-upgrade Job",
          "default": true
        },
        "logLevel": {
          "type": "string",
          "description": "Log level for migration operations",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info"
        },
        "targetMigration": {
          "type": "string",
          "description": "Target a specific migration version (leave empty for latest)",
          "default": ""
        },
        "targetPhase": {
          "type": "string",
          "description": "Target a specific migration phase",
          "enum": ["", "write", "read", "complete"],
          "default": ""
        },
        "tracking": {
          "type": "object",
          "description": "Migration tracking configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable migration state tracking",
              "default": true
            }
          }
        },
        "validation": {
          "type": "object",
          "description": "Migration validation configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable migration validation checks",
              "default": false
            }
          }
        },
        "resources": {
          "type": "object",
          "description": "Resource limits and requests for the migration Job",
          "default": {}
        },
        "cleanup": {
          "type": "object",
          "description": "Cleanup configuration for migration jobs",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable automatic cleanup of completed migration jobs",
              "default": false
            }
          }
        }
      }
    },
    "patches": {
      "type": "object",
      "description": "Strategic merge patches for customizing resources",
      "properties": {
        "deployment": {
          "type": "array",
          "description": "Patches for Deployment resource using strategic merge semantics",
          "items": {
            "type": "object",
            "additionalProperties": true
          },
          "default": []
        },
        "service": {
          "type": "array",
          "description": "Patches for Service resource using strategic merge semantics",
          "items": {
            "type": "object",
            "additionalProperties": true
          },
          "default": []
        },
        "ingress": {
          "type": "array",
          "description": "Patches for Ingress resource (only applied when ingress.enabled is true)",
          "items": {
            "type": "object",
            "additionalProperties": true
          },
          "default": []
        }
      }
    }
  }
}
